<div class="container mx-auto">
  <h1 class="text-xl pb-4 pl-4 pt-6">Editing Category</h1>
<div class="border rounded mx-4 p-4">
  <%= render "form", category: @category %>
</div>


<div class="flex justify-self-start">
  <%= button_to(
    "Show",
    @category,
    method: :get,
    class: "mx-1 p-1 w-16 border rounded cursor-pointer bg-green-500 hover:bg-green-600 text-white",
  )%>
  <%= button_to(
    "Back",
    categories_path,
    method: :get,
    class: "mx-1 p-1 w-16 border rounded cursor-pointer bg-blue-500 hover:bg-blue-600 text-white",
  )%>
</div>
