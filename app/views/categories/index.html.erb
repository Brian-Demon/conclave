<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table-auto border-separate border border-green-800">
  <thead>
    <tr>
      <th class="border border-green-600">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="border border-green-600"><%= category.name %>
        <td class="border border-green-600"><%= link_to 'Show', category %></td>
        <td class="border border-green-600"><%= link_to 'Edit', edit_category_path(category) %></td>
        <td class="border border-green-600"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

